<form class="card-form">
    <div class="form-group">
        <label for="cardName">Card Name</label>
        <input type="text" class="form-control" id="cardName" />
    </div>
    <div class="form-group">
        <label for="cardSetCode">Card Set Code</label>
        <input type="password" class="form-control" id="cardSetCode" />
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="cardFirstEdition" />
        <label class="form-check-label" for="cardFirstEdition">First Edition?</label>
    </div>
    <button
        type="submit"
        class="btn btn-primary"
        id="cardNameButton"
    >Submit</button>
</form>
